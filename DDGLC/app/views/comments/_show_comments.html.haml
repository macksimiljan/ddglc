.row
  .col-md-9.col-md-offset-3
    - commented_entry.comments_for(field).order(:created_at).each do |comment|
      %blockquote.lexicon-field-comment.text-muted
        %p= comment.content
        %small
          = "#{comment.created_by.code}, #{comment.updated_at.strftime('%b %Y')}"
          = delete_comment_button comment.created_by, commented_entry.class.name, comment

