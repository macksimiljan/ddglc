- if flash[:success] or flash[:notice] or flash[:warning] or flash[:error]
  .container
    .row.row-flash-message
      .col-md-12
        -if flash[:notice]
          .alert.alert-success.fade.in
            =flash[:notice]
            %button{:class => 'close', 'data-dismiss' => 'alert', :href =>'#'}
              &times
        -if flash[:error]
          .alert.alert-danger.fade.in
            =flash[:error]
            %button{:class => 'close', 'data-dismiss' => 'alert', :href =>'#'}
              &times
        -if flash[:success]
          .alert.alert-success.fade.in
            =flash[:success]
            %button{:class => 'close', 'data-dismiss' => 'alert', :href =>'#'}
              &times
        -if flash[:warning]
          .alert.alert-warning.fade.in
            =flash[:warning]
            %button{:class => 'close', 'data-dismiss' => 'alert', :href =>'#'}
              &times