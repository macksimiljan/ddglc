- title ||= nil
- is_lemma ||= false
- is_sublemma ||= false
- is_usage ||= false
.page-header
  %h1.lexicon-headline
    - if title
      %span= title
    %span
      %small= link_to 'Lexicon', '/lexicon/about'
    %span
      %small= link_to 'Greek Lemma', lemmas_path unless is_lemma
      = 'Greek Lemma' if is_lemma
    %span
      %small= link_to 'Coptic Sublemma', sublemmas_path unless is_sublemma
      = 'Coptic Sublemma' if is_sublemma
    %span
      %small= link_to 'Coptic Usage', usages_path unless is_usage
      = 'Coptic Usage' if is_usage