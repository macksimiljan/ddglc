- content_for :page_title do
  Distinction Tiers

%section.lexicon-page
  .container
    = render partial: 'shared/lexicon_navigation', locals: {title: 'Distinction Tiers'}

    .row
      .col-md-12
        = link_to fa_icon('plus', class: 'fa-2x'), root_path

    .row
      .col-md-6.col-md-offset-1
        %table.table.table-hover
          %thead
            %tr
              %th Label
              %th Description
              %th.text-center Action
          %tbody
            - @distinction_tiers.each do |tier|
              %tr
                %td
                  = tier.label
                %td
                  = optional_field tier.description
                %td.text-center
                  = link_to fa_icon('pencil-square'), root_path
                  = link_to fa_icon('trash'), root_path




