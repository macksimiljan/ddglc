= form_for_filterrific @filterrifc do |f|
  .row
    .col-md-4 Sort
    .col-md-8
      = f.select :sorted_by, @filterrifc.select_options[:sorted_by]
  .row
    .col-md-4 Meaning
    .col-md-8
      = f.text_field :search_for_meaning, class: 'filterrific-periodically-observed', placeholder: 'Meaning ... '
  .row
    .col-md-8
      = link_to 'Reset filters', reset_filterrific_url
    .col-md-4
      = render_filterrific_spinner